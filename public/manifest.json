{
    "manifest_version": 3,
    "name": "LexiMind AI",
    "version": "1.0.0",
    "description": "AI-powered language learning assistant with contextual lookups.",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "contextMenus"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "translate.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}